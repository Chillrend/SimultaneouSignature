<form action="/signs" method="post" id="signature_form">
    <div class="mb-3 col-lg-8">
        <label for="id" class="form-label">Fullname to be signed</label>
        <select name="id" id="id" class="form-select">
            <option value="0" label="Choose one from the name..."></option>
            {{#each names}}
                <option value="{{this._id}}" label="{{this.fullname}}"></option>
            {{/each}}
        </select>
        <div class="form-text">Choose your name only, choosing other names will overwrite others signature on the main screen</div>
    </div>

    <div class="mb-3 col-lg-8">
        <label for="signature" class="d-block form-label">Draw your signature below</label>
        <canvas id="signature"></canvas>
        <div>
            <button id="clear" class="btn btn-sm btn-danger"><i class="fa fa-eraser"></i> Clear</button>
            <button id="undo" class="btn btn-sm btn-success"><i class="fa fa-undo"></i> Undo</button>
            <button id="redo" class="btn btn-sm btn-success"><i class="fa fa-redo"></i> Redo</button>

        </div>
        <input type="hidden" name="signature" id="serialized_signature">
        <div class="form-text">Draw using your finger or pen tablet, and then click submit</div>
    </div>
    <input type="submit" id="submit-signature" class="btn btn-info" title="Submit">

</form>

{{#each fullname}}
    <p>{{this.fullname}}</p>
{{/each}}